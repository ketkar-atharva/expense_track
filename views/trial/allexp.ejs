<%layout("/layout/boilerplate")-%>
<body>
  <div class="showdown-card p-4 p-md-5 mt-5">
     <section class="expense-section mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-white">ALL ACTIVITIES</h3>
        <span class="text-blue-accent fw-bold small">LATEST ENTRIES</span>
    </div>

    <div class="table-responsive">
        <table class="modern-table w-100">
            <thead>
                <tr>
                    <th>DATE</th>
                    <th>MERCHANT</th>
                    <th>CATEGORY</th>
                    <th>AMOUNT</th>
                    <th>STATUS</th>
                </tr>
            </thead>
            <tbody>
                <% for(let exp of allexp) { %>
                    <tr class="activity-row">
                        <td class="text-muted"><%= exp.date %></td>
                        <td class="fw-bold text-white"><%= exp.merchant %></td>
                        <td><span class="category-pill"><%= exp.category %></span></td>
                        <td class="fw-bold text-white">â‚¹<%= exp.total %></td>
                        <td>
                            <% if (exp.isessential.toLowerCase() == "true") { %>
                                <span class="tag essential">Essential</span>
                            <% } else { %>
                                <span class="tag luxury">Luxury</span>
                            <% } %>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</section>
  </div>
    
</body>
